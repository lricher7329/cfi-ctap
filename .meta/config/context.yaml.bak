# CFI CTAP Project Context Configuration
# This file contains project-specific domain content for CFI skills
# Other CFI projects should create their own context.yaml with their specifics

project: cfi-ctap
project_title: "Clinical Trials Acceleration Platform (CTAP)"
institution: University of Alberta

# Strategic plan references (varies by institution)
institutional_alignment:
  strategic_plan: "Forward with Purpose"
  provincial_strategy: "Alberta Technology and Innovation Strategy (ATIS)"
  research_priorities:
    - Clinical trial innovation
    - AI-augmented research
    - Precision medicine
    - Pediatric and rare disease

# Flagship programs (varies by proposal)
# These define the major research initiatives that infrastructure supports
flagship_programs:
  - name: Neuro-immunology and MS
    short_name: neuro_ms
    suites: [1, 2, 4]
    key_equipment:
      - CSF processing and cryopreservation
      - EHR integration for outcomes
      - MS-specific biomarker panels
    national_networks:
      - CIHR MS Research Network
      - Brain Canada

  - name: Hepatitis C and Vaccines
    short_name: hcv_vaccines
    suites: [1, 2, 3]
    key_equipment:
      - BSL-2+ containment facilities
      - Challenge agent preparation
      - Vaccine formulation support
    national_networks:
      - VIDO-InterVac
      - Canadian Immunization Research Network

  - name: Cardio-renal
    short_name: cardio_renal
    suites: [1, 2, 3]
    key_equipment:
      - Cardiac monitoring systems
      - Renal biomarker panels
      - TMIC metabolomics access
    national_networks:
      - Heart & Stroke Foundation
      - Can-SOLVE CKD

  - name: Pediatric Rare Disease
    short_name: peds_rare
    suites: [1, 4]
    key_equipment:
      - Child-friendly clinical space
      - Remote monitoring devices
      - Federated data access
    national_networks:
      - RareKids-CAN
      - Genome Canada
      - CIHR Rare Disease Network

  - name: CRAIDL Development
    short_name: craidl
    suites: [4, 5]
    key_equipment:
      - GPU compute cluster
      - FHIR integration servers
      - Wearable device validation lab
    development_partners:
      - Amii (Alberta Machine Intelligence Institute)
      - AHS Analytics

# Suite architecture (varies by proposal)
# Defines the infrastructure domains and their special characteristics
suites:
  - number: 1
    name: Clinical Trials Infrastructure
    short_name: clinical_trials
    description_file: suites/suite_1_clinical_trials_infrastructure.md

  - number: 2
    name: Living Biorepository
    short_name: biorepository
    description_file: suites/suite_2_living_biorepository.md
    # Special concepts that differentiate this from standard biobanks
    special_concepts:
      - name: Real-time EMR linkage
        description: Connect Care FHIR API integration for live clinical data
      - name: Automated outcome annotation
        description: Clinical events automatically annotate stored samples
      - name: Predictive inventory management
        description: AI predicts sample expiration and utilization
      - name: AI-assisted sample selection
        description: Recommends samples based on research questions
    differentiators:
      - "NOT a static biobank - samples are annotated with outcomes in real-time"
      - "Researchers query for specimens with specific outcome trajectories"
      - "AI recommends sample retrieval based on research questions"

  - number: 3
    name: Translational Science
    short_name: translational
    description_file: suites/suite_3_translational_science.md

  - number: 4
    name: Data Platform
    short_name: data_platform
    description_file: suites/suite_4_data_platform.md
    special_concepts:
      - name: CRAIDL AI Agents
        description: Six specialized AI agents for trial operations
        agents:
          - name: Protocol Agent
            function: Protocol generation from research objectives
            tre_zone: 3
          - name: Data Management Agent
            function: CDM transformation, data quality
            tre_zone: [2, 3]
          - name: Events Agent
            function: AE detection and reporting
            tre_zone: 2
          - name: Ethics Agent
            function: Consent management, protocol amendments
            tre_zone: [2, 3]
          - name: Regulatory Agent
            function: Submission package preparation
            tre_zone: 3
          - name: Budget & Contracts Agent
            function: Site payments, milestone tracking
            tre_zone: 3
      - name: Three-zone TRE architecture
        description: Trusted Research Environment with graduated access
        zones:
          - zone: 1
            name: Identifiable
            access: AHS-controlled, no AI agent access
          - zone: 2
            name: Controlled Processing
            access: Limited access, some agents operate here
          - zone: 3
            name: Research
            access: De-identified outputs, most agent operations

  - number: 5
    name: Trial Innovation
    short_name: innovation
    description_file: suites/suite_5_trial_innovation.md

# Document structure (aligns with dependency_graph.json)
documents:
  master: MASTER.md
  rta: rta/rta.md
  briefs_directory: briefs/
  suites_directory: suites/

# Research objectives (canonical list - details in Google Sheets)
objectives_count: 7
